<div class="container">
  <div class="mb-3">
    <p id="notice"><%= notice %></p>  
    <h3>Herramienta</h3>
  </div>  
  <div class="mb-3">
    <%= link_to 'Nueva Herramienta', new_herramientum_path,class: :"btn btn-sm btn-outline-dark" %>
  </div>
  <table class="table table-dark">
    <thead>
        <tr>
          <th>Conexion bd</th>
          <th>Dato</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @herramienta.each do |herramientum| %>
          <tr>
            <td><%= herramientum.conexion_bd_id %></td>
            <td><%= herramientum.dato_id %></td>
            <td><%= link_to 'Show', herramientum %></td>
            <td><%= link_to 'Edit', edit_herramientum_path(herramientum) %></td>
            <td><%= link_to 'Destroy', herramientum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

</div>