<div class="container">
<p id="notice"><%= notice %></p>
<div class="container div-padding row">
  <div class="col-sm"><h4>Informe General</h4></div>
  <div class="col-sm"><%= link_to 'Nuevo Informe General', new_informe_general_path,class: :"color-letra btn btn-sm btn-success", style: :"float: right;" %></div>
</div>
<% if can? :read, InformeGeneral %>
<table class="table table-stripedless table-dark">
  <thead class="table-dark">
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @informe_generals.each do |informe_general| %>
      <tr>
        <td><%= informe_general.nombre %></td>
        <td><%= link_to 'Ver', informe_general %></td>
        <td><%= link_to raw("#{image_tag('pencil-square.svg')} Editar"), edit_informe_general_path(informe_general) %></td>
        <td><%= link_to raw("#{image_tag('trash.svg')} Eliminar"), informe_general, method: :delete, data: { confirm: 'Â¿Estas seguro?' } %></td>
      </tr>
    <% end %>  
  </tbody>
</table>
<% else %>
<h5>No tienes los permisos necesarios</h5>
<% end %>

<% @obj = @informe_generals %>

</div>