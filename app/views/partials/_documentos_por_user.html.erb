 <% @arreglo = @arreglo.paginate(:page => params[:page], :per_page =>10) %>

<table class="table table-dark ">
  <thead >
    <th>Folio de Entrada</th>
    <th>Id docum</th>
    <th>Serial del Documento</th>
    <th>Asunto</th>
    <th>Nombre Archivo</th>
    <th>Descripci√≥n</th>
    <th>Descarga</th>
  </thead>
  <tbody>
    <% @arreglo.each do |a| %>
      <tr>
        <td><%= a["folio_entrada"] %></td>
        <td><%= a["id_docum"] %></td>
        <td><%= a["id_docum_serial"]%></td>
        <td><%= a["asunto"] %></td>
