<p id="notice"><%= notice %></p>

<h1>Subdireccions</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subdireccions.each do |subdireccion| %>
      <tr>
        <td><%= subdireccion.nombre %></td>
        <td><%= link_to 'Show', subdireccion %></td>
        <td><%= link_to 'Edit', edit_subdireccion_path(subdireccion) %></td>
        <td><%= link_to 'Destroy', subdireccion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

