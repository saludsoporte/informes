<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="mb-3">
    <h3>Columnas de Datos de las Herramientas</h3>
    <%= link_to 'Nueva entrada', new_dato_path, class: :"btn btn-sm btn-outline-dark" %>
  </div>
  <table class="table table-sm table-dark">
    <thead>
      <tr>
        <th>Nombre</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @datos.each do |dato| %>
        <tr>
          <td><%= dato.nombre %></td>
          <td><%= link_to 'Ver', dato ,class: :"btn btn-sm btn-outline-dark" %></td>
          <td><%= link_to raw("#{image_tag("pencil-square.svg")} Editar"), edit_dato_path(dato) %></td>
          <td><%= link_to raw("#{image_tag("trash.svg")} Eliminar"), dato, method: :delete, data: { confirm: 'Â¿Estas seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>