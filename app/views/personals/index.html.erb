<h1>Personals</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido p</th>
      <th>Apellido m</th>
      <th>Nombre completo</th>
      <th>Telefono</th>
      <th>Calle</th>
      <th>Numero</th>
      <th>Colonia</th>
      <th>Cp</th>
      <th>Curp</th>
      <th>Fecha nacimiento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personals.each do |personal| %>
      <tr>
        <td><%= personal.nombre %></td>
        <td><%= personal.apellido_p %></td>
        <td><%= personal.apellido_m %></td>
        <td><%= personal.nombre_completo %></td>
        <td><%= personal.telefono %></td>
        <td><%= personal.calle %></td>
        <td><%= personal.numero %></td>
        <td><%= personal.colonia %></td>
        <td><%= personal.cp %></td>
        <td><%= personal.curp %></td>
        <td><%= personal.fecha_nacimiento %></td>
        <td><%= link_to 'Show', personal %></td>
        <td><%= link_to 'Edit', edit_personal_path(personal) %></td>
        <td><%= link_to 'Destroy', personal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

