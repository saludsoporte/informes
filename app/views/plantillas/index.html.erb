<div class="container">
  <div class="mb-3">
    <p id="notice"><%= notice %></p>
    <h3>Plantillas</h3>
    <%= link_to 'Nueva entrada de plantilla', new_plantilla_path, class: :"btn btn-sm btn-outline-dark" %>    
  </div>
  <div class="mb-3">  
    <%= select(:herramienta_id,:herramientum,Herramientum.all.collect{ |h| [h.nombre_sistema,h.id]},{include_blank: true},id: :herramienta,class: :"form-control content-search herramientas")%>  
  </div>
  <div id="parcial">
    <%= render :partial => "herr_index" , :obj => @plantilla %>
  </div>
<table>
  <thead>
    <tr>
      <th>Herramienta</th>
      <th>Dato</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plantillas.each do |plantilla| %>
      <tr>
        <td><%= plantilla.herramienta_id %></td>
        <td><%= plantilla.dato_id %></td>
        <td><%= link_to 'Show', plantilla %></td>
        <td><%= link_to 'Edit', edit_plantilla_path(plantilla) %></td>
        <td><%= link_to 'Destroy', plantilla, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


</div>