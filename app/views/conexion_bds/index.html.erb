<div class="container">
  <div class="mb-3">
    <p id="notice"><%= notice %></p>
    <h3>Conexion Bds</h3>
    <%= link_to 'Nueva entrada de conexión', new_conexion_bd_path, class: :"btn btn-sm btn-outline-dark" %>
  </div>
  <table class="table table-dark">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @conexion_bds.each do |conexion_bd| %>
      <tr>
        <td><%= conexion_bd.nombre_herramienta %></td>
        <td><%= link_to 'Ver', conexion_bd,class: :"btn btn-sm btn-light" %></td>
        <td><%= link_to raw("#{image_tag("pencil-square.svg")} Editar"), edit_conexion_bd_path(conexion_bd) %></td>
        <td><%= link_to raw("#{image_tag("trash.svg")} Eliminar"), conexion_bd, method: :delete, data: { confirm: '¿Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<% @obje= @conexion_bds %>
