<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="mb-3">
    <%= link_to 'Editar', edit_conexion_bd_path(@conexion_bd),class: :"btn btn-sm btn-outline-dark" %> |
    <%= link_to 'Regresar', conexion_bds_path,class: :"btn btn-sm btn-outline-dark" %>
  </div>
  <div class="row">
    <div class="col mb-3">
      <p>  
      <strong>Herramienta:</strong>
      <%= @conexion_bd.nombre_herramienta %>
      </p>
    </div>
    <div class="col mb-3">
      <p>  
      <strong>Puerto:</strong>
      <%= @conexion_bd.puerto %>
      </p>
    </div>
    <div class="col mb-3">
      <p>  
      <strong>Host:</strong>
      <%= @conexion_bd.host %>
      </p>
    </div>
    <div class="col mb-3">
      <p>  
      <strong>Usuario</strong>
      <%= @conexion_bd.usuario %>
      </p>
    </div>
  </div>
</div>