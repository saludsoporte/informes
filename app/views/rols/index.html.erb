<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="mb-3">  
    <h3>Roles</h3>
  </div>
  <div class="mb-3">
    <%= link_to "Crear un nuevo Rol", new_rol_path, class: :"btn btn-sm btn-outline-dark" %>
  </div>  
  <table  class="table table-dark table-striped"> 
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Descripcion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @rols.each do |rol| %>
        <tr>
          <td><%= rol.nombre %></td>
          <td><%= rol.descripcion %></td>
          <td><%= link_to 'ver', rol %></td>
          <td><%= link_to raw("#{image_tag("pencil-square.svg")} Editar"), edit_rol_path(rol) %></td>
          <td><%= link_to raw("#{image_tag("trash.svg")} Eliminar"), rol, method: :delete, data: { confirm: 'Â¿Estas seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>