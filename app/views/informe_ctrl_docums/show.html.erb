<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="mb-3">
    <h3>Entrada de Informe </h3>
    <%= link_to 'Editar', edit_informe_ctrl_docum_path(@informe_ctrl_docum),class: :"btn btn-sm btn-outline-dark"%> |
    <%= link_to 'Regresar', informe_ctrl_docums_path,class: :"btn btn-sm btn-outline-dark" %>
  </div>
  <%= form_with url:informe_ctrl_docums_buscar_serial_path, method: :get do |f| %>
    <div class="row g-3 align-items-center">
      <div class="col-auto">
        <label class="col-form-label">Buscar por Serial</label>
      </div>
      <div class="col-auto">
        <%= f.number_field  :serial ,min:0, class: :"form-control" %>
        <%= f.text_field :id,value:params[:id],hidden:true  %>
      </div>
      <div class="col-auto">
        <%= f.submit "Buscar" , class: :"btn btn-sm btn-success" %>
      </div>
      <div class="col-auto">
        <%= link_to "Limpiar busqueda", informe_ctrl_docum_path(params[:id]) , class: :"btn btn-sm btn-success" %>
      </div>
    </div>
  <% end %><br>
  <div class="row row-cols-2">
    <div class="form-floating col">
      <div id="u" class="form-control"><%= @informe_ctrl_docum.user.login%></div>
      <label for="u" >Usuario</label>
    </div>
    <div class="form-floating col">
      <div id="h" class="form-control"><%= @informe_ctrl_docum.herramientum.nombre_sistema %></div>
      <label for="h">Herramienta</label>
    </div>
    <div class="form-floating col">
      <div id="i" class="form-control"><%= @informe_ctrl_docum.nombre_informe %></div>
      <label for="i">Nombre del Informe</label>
    </div>
    <% if @informe_ctrl_docum.rango %>
      <div class="form-floating col">
      </div>
      <div class="form-floating col">
        <div id="f" class="form-control"><%= @informe_ctrl_docum.fecha_ini %></div>
        <label for="f">Fecha Inicial</label>
      </div>
      <div class="form-floating col">
        <div id="f" class="form-control"><%= @informe_ctrl_docum.fecha_fin %></div>
        <label for="f">Fecha Final</label>
      </div>
    <% else %>
      <div class="form-floating col">
        <div id="f" class="form-control"><%= @informe_ctrl_docum.fecha_doc %></div>
        <label for="f">Fecha Documento</label>
      </div>
    <% end %>
  </div>
  <br>
  <div>
    <br>
    <table class="table table-dark ">
      <thead >
        <th>Folio de Entrada</th>
        <th>Id docum</th>
        <th>Serial del Documento</th>
        <th>Asunto</th>
        <th>Nombre Archivo</th>
        <th>Descripci√≥n</th>
        <th>Descarga</th>
      </thead>
      <tbody>
        <% @arreglo.each do |a| %>
          <tr>
            <td><%= a["folio_entrada"] %></td>
            <td><%= a["id_docum"] %></td>
            <td><%= a["id_docum_serial"]%></td>
            <td><%= a["asunto"] %></td>
            <td><%= a["nombre_archivo"]!="" ? a["nombre_archivo"] : "No hay pdf guardado"  %></td>
            <td><%= a["descripcion"]%></td>
            <td>
              <% unless a["nombre_archivo"]=="" %>
                <%= link_to "Descargar", informe_ctrl_docums_descargar_archivo_path(id:params[:id],nombre:a["nombre_archivo"]) , class: :"btn btn-sm btn-light"%>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<% unless @sin_pagina %>
  <% @obje = @arreglo %>
<% end %>
