<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="mb-3">
    <h3>Entrada de Informe </h3>
    <%= link_to 'Editar', edit_informe_ctrl_docum_path(@informe_ctrl_docum),class: :"btn btn-sm btn-outline-dark"%> |
    <%= link_to 'Regresar', informe_ctrl_docums_path,class: :"btn btn-sm btn-outline-dark" %>
  </div>
  <div class="row row-cols-2">
    <div class="form-floating col">
      <div id="u" class="form-control"><%= @informe_ctrl_docum.user.login%></div>
      <label for="u" >Usuario</label>
    </div>
    <div class="form-floating col">
      <div id="f" class="form-control"><%= @informe_ctrl_docum.fecha_doc %></div>
      <label for="f">Fecha Documento</label>
    </div>
    <div class="form-floating col">
      <div id="h" class="form-control"><%= @informe_ctrl_docum.herramientum.nombre_sistema %></div>
      <label for="h">Herramienta</label>
    </div>
    <div class="form-floating col">
      <div id="i" class="form-control"><%= @informe_ctrl_docum.nombre_informe %></div>
      <label for="i">Nombre del Informe</label>
    </div>
  </div>
  <div>
    <br>
    <table class="table table-dark ">
      <thead >
        <th>Serial del Documento</th>
        <th>Nombre Archivo</th>
        <th>Descripci√≥n</th>
        <th>Descarga</th>
        <th>Subida</th>
      </thead>
      <tbody>
        <% @arreglo.each do |a| %>
          <tr>
            <td><%= a["id_docum_serial"]%></td>
            <td><%= a["nombre_archivo"]!="" ? a["nombre_archivo"] : "No hay pdf guardado"  %></td>
            <td><%= a["descripcion"]%></td>
            <td>
              <% unless a["nombre_archivo"]=="" %>
                <%= link_to "Descargar", informe_ctrl_docums_descargar_archivo_path(id:params[:id],nombre:a["nombre_archivo"]) , class: :"btn btn-sm btn-light"%>            </td>
              <% end %>
            <td>
              <% unless a["nombre_archivo"]!="" %>
                <%= link_to "Subir", "",class: :"btn btn-sm btn-light"%>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<% @obje = @arreglo %>
