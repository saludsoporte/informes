<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="mb-3">
    <h3>Informe Control Documental</h3>
    <%= link_to 'Nueva entrada de informe', new_informe_ctrl_docum_path,class: :"btn btn-sm btn-outline-dark" %>
  </div>
  <table class="container table table-dark">
    <thead>
      <tr>
        <th>Nombre informe</th>
        <th>Fecha doc</th>
        <th>Herramienta</th>        
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @informe_ctrl_docums.each do |informe_ctrl_docum| %>
        <tr>
          <td><%= informe_ctrl_docum.fecha_doc %></td>
          <td><%= informe_ctrl_docum.herramientum_id %></td>
          <td><%= informe_ctrl_docum.nombre_informe %></td>
          <td><%= informe_ctrl_docum.user_id %></td>
          <td><%= link_to 'Show', informe_ctrl_docum %></td>
          <td><%= link_to 'Edit', edit_informe_ctrl_docum_path(informe_ctrl_docum) %></td>
          <td><%= link_to 'Destroy', informe_ctrl_docum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
</div>
