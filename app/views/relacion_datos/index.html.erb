<p id="notice"><%= notice %></p>

<h1>Relacion Datos</h1>

<table>
  <thead>
    <tr>
      <th>Herramienta</th>
      <th>Dato</th>
      <th>Valo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @relacion_datos.each do |relacion_dato| %>
      <tr>
        <td><%= relacion_dato.herramienta_id %></td>
        <td><%= relacion_dato.dato_id %></td>
        <td><%= relacion_dato.valo %></td>
        <td><%= link_to 'Show', relacion_dato %></td>
        <td><%= link_to 'Edit', edit_relacion_dato_path(relacion_dato) %></td>
        <td><%= link_to 'Destroy', relacion_dato, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

